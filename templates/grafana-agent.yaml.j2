metrics:
  global:
    scrape_interval: 1m
  wal_directory: /var/lib/grafana-agent/wal
  configs:
    - name: {{ ansible_fqdn }}
      host_filter: false
      scrape_configs:
        {{ grafana_agent_prometheus_scrapes_combined|to_yaml|indent(8)}}
      remote_write:
        - url: {{ grafana_agent_prometheus_target }}
          queue_config:
            min_backoff: 30s
            max_backoff: 10m
{% if grafana_agent_prometheus_target_ssl %}
          tls_config:
            ca_file: /etc/grafana-agent/client-ca.pem
            cert_file: /etc/grafana-agent/client.pem
            key_file: /etc/grafana-agent/client.key
{% endif %}
{% if grafana_agent_logs_scrape_config_combined|length > 0 %}
logs:
  configs:
  - name: default
    positions:
      filename: /var/lib/grafana-agent/positions.yaml
    scrape_configs:
      {{ grafana_agent_logs_scrape_config_combined | to_yaml | indent(6) }}
    clients:
      - url: {{ grafana_agent_logs_client_url }}
        tls_config:
          ca_file: /etc/grafana-agent/client-ca.pem
          cert_file: /etc/grafana-agent/client.pem
          key_file: /etc/grafana-agent/client.key
{% endif %}

